<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>order</title>

    <%- include('./partials/links') %>
</head>

<body class="grey lighten-3">

    <%- include('./partials/navbar') %>

        <!--Main layout-->
        <main class="mt-5 pt-4">
            <div class="container wow fadeIn">

                <!--Grid row-->
                <div class="row">

                    <!--Grid column-->
                    <div>

                        <!-- Heading -->
                        <h4 class="d-flex justify-content-between align-items-center mb-3">
                            <span class="text-muted">Order : <%= order._id %></span>
                            <span id="totalItems" class="badge badge-secondary badge-pill">
                                <%= order.productItems.length %>
                            </span>
                        </h4>

                        <%- include('./partials/order-item') %>

                    </div>
                    <!--Grid column-->

                    <!--Grid column-->
                        <!-- Heading -->
                        <h4 class="d-flex justify-content-between align-items-center mb-3">
                            <span class="font-weight-bold text-muted">Billing Details</span>
                        </h4>

                        <ul class="list-group mb-3 z-depth-1">
                            <li class="list-group-item d-flex justify-content-between lh-condensed">
                                <div class="ml-3 mr-3 ">
                                    <h6 class="my-0"><span class="font-weight-bold">Name : </span>
                                        <%= order.firstName %>
                                            <%= order.lastName %>
                                    </h6>
                                </div>
                            </li>
                            <li class="list-group-item d-flex justify-content-between lh-condensed">
                                <div class="ml-3 mr-3 ">
                                    <h6 class="my-0"><span class="font-weight-bold">Phone Number : </span>
                                        <%= order.phoneNo %>
                                    </h6>
                                </div>
                            </li>
                            <li class="list-group-item d-flex justify-content-between lh-condensed">
                                <div class="ml-3 mr-3 ">
                                    <h6 class="my-0"><span class="font-weight-bold">Email : </span>
                                        <%= order.email %>
                                    </h6>
                                </div>
                            </li>
                            <li class="list-group-item d-flex justify-content-between lh-condensed">
                                <div class="ml-3 mr-3">
                                    <h6 class="my-0"><span class="font-weight-bold">Address : </span>
                                        <%= order.address %>, <%= order.zipCode %>, <%= order.city %>, <%= order.state
                                                        %>, <%= order.country %>
                                    </h6>
                                    <hr>
                                </div>
                            </li>
                            <li class="list-group-item d-flex justify-content-between">
                                <div class="ml-3 mr-3  text-success">
                                    <span class="font-weight-bold">Total (USD) : </span>
                                    <strong>$<%= order.totalPrice %></strong>
                                </div>
                            </li>
                        </ul>

                </div>
                <!--Grid column-->

            </div>
            <!--Grid row-->

            </div>
        </main>
        <!--Main layout-->

        <%- include('./partials/footer')%>

            <!-- SCRIPTS -->
            <!-- JQuery -->
            <script type="text/javascript" src="/js/jquery-3.4.1.min.js"></script>
            <!-- Bootstrap tooltips -->
            <script type="text/javascript" src="/js/popper.min.js"></script>
            <!-- Bootstrap core JavaScript -->
            <script type="text/javascript" src="/js/bootstrap.min.js"></script>
            <!-- MDB core JavaScript -->
            <script type="text/javascript" src="/js/mdb.min.js"></script>
            <!-- cart javascript -->
            <script src="/js/cart.js"></script>
            <!-- Initializations -->
            <script type="text/javascript">
                // Animations initialization
                new WOW().init();
            </script>
</body>

</html>